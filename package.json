{
  "name": "express-ts-boilerplate",
  "version": "v0.0.1",
  "private": true,
  "scripts": {
    "prestart": "yarn build",
    "start": "cross-env NODE_ENV=production node build/index.js",
    "start:dev": "cross-env NODE_ENV=dev concurrently \"yarn build:dev\" \"nodemon build/index.js\"",
    "build": "tsc",
    "build:dev": "tsc -w",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv-flow": "3.2.0",
    "express": "4.17.1",
    "helmet": "^4.1.1",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/cors": "2.8.7",
    "@types/express": "4.17.8",
    "@types/helmet": "0.0.48",
    "@types/morgan": "1.9.1",
    "@types/node": "14.11.5",
    "concurrently": "5.3.0",
    "cross-env": "7.0.2",
    "nodemon": "2.0.4",
    "prettier": "2.1.2",
    "typescript": "4.0.3"
  }
}
